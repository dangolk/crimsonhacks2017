{
  "manifest_version": 2,

  "name": "Pacimosity",
  "description": "This extension analyses a page for animosity level and pacifies the user with pacifying feedback",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "icons" : {
	"64" : "icon.png"
  },
  
  "background":{
    "scripts": ["background.js"],
    "persistent": false
  },
  
  "content_scripts": [ {

		"js": [ "popup.js" ],
		"matches": [ "http://*/*", "https://*/*" ],
		"run_at": "document_idle"
	} ],
	
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
	
	// notifications	idle	history		cookies		content settings		
	
  ]
}
